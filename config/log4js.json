{
    "log4js": {
        "appenders": [
            {
                "category": "access",
                "type": "dateFile",
                "filename": "logs/access.log",
                "pattern": "_yyyy-MM-dd",
                "backups": 10
            },
            {
                "category": "system",
                "type": "dateFile",
                "filename": "logs/system.log",
                "pattern": "_yyyy-MM-dd",
                "backups": 10
            },
            {
                "category": "error",
                "type": "dateFile",
                "filename": "logs/error.log",
                "pattern": "_yyyy-MM-dd",
                "backups": 10
            },
            {
                "type": "console"
            }
        ],
        "levels": {
            "access": "ALL",
            "system": "ALL",
            "error": "ALL"
        }
    }
}